{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ESNext"],
		"outDir": "lib/esm",
		"rootDirs": ["src", "tests"],
		"strict": true,
		"skipLibCheck": true,
		"types": ["node", "jest"],
		"allowSyntheticDefaultImports": true,
	},
	"exclude": ["node_modules/**/*", "tests/fixtures/**/*"]
}
